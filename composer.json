{
    "name": "luka/magento-core-installer",
    "description": "Magento Core installation via Composer",
    "keywords":[ "composer-installer", "magento"],
    "minimum-stability": "dev",
    "type": "composer-plugin",
    "license": "MIT",
    "authors":[
        {
            "name": "Zvonimir Buric",
            "email": "zvonimir.buric@luka.de"
        }
    ],
    "autoload": {
        "psr-0": {"Luka\\Composer\\MagentoCore": "src/"}
    },
    "require": {
        "magento-hackathon/magento-composer-installer": "*"
    },
    "suggest":{
        "magento-hackathon/composer-command-integrator":"*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        },
        {
            "type": "git",
            "url": "https://github.com/magento-hackathon/magento-composer-installer"
        }
    ],
    "extra": {
        "composer-command-registry": [
            "MagentoHackathon\\Composer\\Magento\\Command\\DeployCommand",
            "Luka\\Composer\\MagentoCore\\Command\\DeployCommand"
        ],
        "class": "Luka\\Composer\\MagentoCore\\Installer"
    }
}
